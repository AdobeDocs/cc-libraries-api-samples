{
    "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "target": "es6",
      "noImplicitAny": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "dist",
      "baseUrl": ".",
      "paths": {
        "*": [
          "node_modules/*",
        ]
      },
      "typeRoots": ["./src/types", "./node_modules/@types"],
      "resolveJsonModule": true
    },
    "include": [
      "src/**/*",
      "tests/**/*"
    ]
  }